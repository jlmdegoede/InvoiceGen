% Aantal functies gemaakt voor het vereenvoudigen van de invoer in de tabellen
%   -InvullenTwee
%       Neemt drie variabelen
%       * Eerste entry
%       * Tweede entry
%       * Hoeveel spacing er moet zijn
 \newcommand{\InvullenTwee}[3]{
   \textbf{\large #1} \hspace{#3pt}  & {\large #2} \\
 }

 \newcommand{\InvullenVijf}[5]{
   {\large #1} & {\large #2} & {\large #3} & {\large \euro #4} & {\large \euro #5} \\
 }

 \newcommand{\InvullenVijfBold}[5]{
   \textbf{\large #1} & \textbf{\large #2} & \textbf{\large #3}& \textbf{\large #4}& \textbf{\large #5} \\
 }
